{
  "compilerOptions": {
    "importHelpers": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "lib/commonjs",
    "rootDir": "src",
    "strict": true,
    "target": "es2015",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": ["ES2019", "DOM.Iterable"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts"
  ]
}
