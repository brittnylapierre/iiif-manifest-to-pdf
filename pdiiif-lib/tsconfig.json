{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "module": "es2022",
    "moduleResolution": "node",
    "outDir": "lib/esm",
    "declarationDir": "lib/types",
    "rootDir": "src",
    "strict": true,
    "strictNullChecks": true,
    "target": "es2021",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["ES2019", "DOM", "DOM.Iterable"],
    "sourceMap": true,
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts"
  ]
}